{% assign logo_type = 'text' %}
{% if section.settings.logo %}
  {% assign logo_type = 'image' %}
  {% assign image_size = '600x200' %}
{% endif %}

<div class="fw--logo {% if logo_type == 'image' %}height-{{ section.settings.logo-height-range }}{% endif %} type--{{ logo_type }}">
  <div class="item" itemscope itemtype="http://schema.org/Organization">

    {% if logo_type == 'image' %}
      <a href="{{ routes.root_url }}" title="{{ routes.root_url }}" itemprop="url">
        {% if image_type == 'inverted' %}
          <img
            src="{{ section.settings.inverted-logo | img_url: image_size }}"
            alt="{{ section.settings.inverted-logo.alt | default: shop.name }}"
            itemprop="logo"
          >
        {% else %}
          <img
            src="{{ section.settings.logo | img_url: image_size }}"
            alt="{{ section.settings.logo.alt | default: shop.name }}"
            itemprop="logo"
          >
        {% endif %}
      </a>
    {% else %}
      <a href="{{ routes.root_url }}" title="{{ routes.root_url }}">
        <div class="logo--text font--section-heading">{{ shop.name }}</div>
      </a>
    {% endif %}

  </div>
</div>